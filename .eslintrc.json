{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true,
        "jest":true
    },
    "extends": [
        "airbnb-base",
        "prettier"
    ],
    "plugins" : ["prettier"],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "no-underscore-dangle" : "off",
        "class-methods-use-this" :"off",
        "no-console":"off",
        "no-unused-vars" : ["error", { "destructuredArrayIgnorePattern": "^_" }],
        "no-new" : "off"
    }
}
